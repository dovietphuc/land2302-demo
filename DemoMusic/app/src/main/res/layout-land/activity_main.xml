<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/host_fragment"
            android:tag="host_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.demomusic.songlist.SongListFragment"
            android:layout_weight="1" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/host_fragment_detail"
            android:tag="host_fragment_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.demomusic.songdetail.SongDetailFragment"
            android:layout_weight="1" />

    </LinearLayout>
</layout>